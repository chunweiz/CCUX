<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main">
<u:Tag class="nrgCamPds-root">
    <u:Tag class="nrgCamTls-ttl" text="{comp-i18n-campaign>nrgCmpTlsPendSwapTtl}" />
    <u:Tag class="nrgCamTls-ttl" text="{='You have selected '+ ${appView>/selected} + ' records'}" />
    <u:Table width="auto"
             id="idnrgCamPds-pendTable"
             class="nrgCamOvr-left nrgCamTls-top nrgCamPds-pendTable">
                    <u:columns>
                        <u:TableColumn width="8%" class="nrgCamPds-th">
                            <c:Label text="Select"/>
                        </u:TableColumn>
                        <u:TableColumn width="33%" class="nrgCamPds-th">
                            <c:Label text="Offer Description"/>
                        </u:TableColumn>
                        <u:TableColumn width="14%" class="nrgCamPds-th">
                            <c:Label text="Campaign Code"/>
                        </u:TableColumn>
                        <u:TableColumn width="11%" class="nrgCamPds-th">
                            <c:Label text="Promo Code"/>
                        </u:TableColumn>
                        <u:TableColumn width="13%" class="nrgCamPds-th">
                            <c:Label text="Product Code"/>
                        </u:TableColumn>
                        <u:TableColumn width="10%" class="nrgCamPds-th">
                            <c:Label text="Signed Dt"/>
                        </u:TableColumn>
                        <u:TableColumn width="11%" class="nrgCamPds-th">
                            <c:Label text="Offer Code"/>
                        </u:TableColumn>
                    </u:columns>
            </u:Table>
          <u:Tag>
            <u:Tag class="nrgCamTls-top nrgCamTls-font">
                <u:Textfield
                    placeholder=""
                    change="testInputChange"
                    fieldType="Underlined"
                    label="Requestor's Name">
                </u:Textfield>
            </u:Tag>
            <u:Tag>
                <c:Label text="No Phone" class="nrgCamTls-left "/>
                <um:Checkbox id="idnrgCamTlsNoPhone" select=".onSelected" class="nrgCamTls-left"/>
            </u:Tag>
            <u:Tag class="nrgCamTls-top">
                <u:Textfield
                    placeholder=""
                    change="testInputChange"
                    fieldType="Underlined"
                    label="Requestor's Number">
                </u:Textfield>
            </u:Tag>
            <u:Tag class="nrgCamTls-top">
                <u:Button
                    text="Proceed with Cancel"
                    enabled="true"
                    press=".ProceedwithCancel">
                </u:Button>
                <u:Button
                    text="Continue without Cancel"
                    enabled="true"
                    press=".ContinuewithCancel">
                </u:Button>
            </u:Tag>
          </u:Tag>
        <!-- Place holder for templates to reuse for Bind Aggregation method. Below will be always Display:none -->
        <u:Tag class="nrgCamTls-hide">
             <u:Table width="60%"
                id="idnrgCamTls-pendTable1"
                class="nrgCamOvr-left nrgCamOvr-top" >
                    <u:rows>
                    <u:TableRow id="idnrgCamPds-pendRow" class="nrgCamPds-pendRow" >
                        <um:Checkbox id="idPds" select="onPendingSwapsSelected" />
                        <c:Label text="{comp-campaign>OfferDesc}"/>
                        <c:Label text="{comp-campaign>Campaign}"/>
                        <c:Label text="{comp-campaign>Promo}"/>
                        <c:Label text="{comp-campaign>Product}"/>
                        <c:Label text="{path: 'comp-campaign>DateSigned',
                                       type: 'sap.ui.model.type.Date', formatOptions:{pattern: 'MM/dd/yyyy'} }" />
                        <c:Label text="{comp-campaign>Offer}"/>
                    </u:TableRow>
                </u:rows>
                </u:Table>
        </u:Tag>
        <!-- Place holder for templates to reuse for Bind Aggregation method. Below will be always Display:none -->
</u:Tag>
</core:FragmentDefinition>
