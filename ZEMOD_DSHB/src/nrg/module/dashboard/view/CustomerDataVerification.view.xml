<!--Routing Pattern: customerDataVerification/bp/{bpNum}-->
<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:utmain="ute.ui.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.commons"
    xmlns:l="sap.ui.commons.layout"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    controllerName="nrg.module.dashboard.view.CustomerDataVerification">

    <ute:Tag class="nrgAppMain-generalContent nrgDashboard-cusDataVerify">
        <ute:Tag class="nrgDashboard-cusDataVerify-layout">
            <!--Area Left -->
            <ute:Tag class="nrgDashboard-cusDataVerify-left">
                <ute:Tag class="nrgDashboard-cusDataVerify-lleft-wrap">
                    <!-- Status -->
                    <ute:TextView id="nrgDashBoard-cusDataVerify-Status"
                        text="{oDtaVrfyContract>/ContractStatus}"
                        class="nrgDashboard-cusDataVerify-left-statusTitle">
                        <ute:tooltip>
                            <ute:Tooltip>
                                <ute:TextView
                                    color="White"
                                    text="{
                                    parts:['oDtaVrfyContract>/HoveringStatus'],
                                    formatter:'._formatDate'}"/>
                            </ute:Tooltip>
                        </ute:tooltip>
                    </ute:TextView>
                    <!--<utmain:Button press="._navToSvcOdr" text="testSvc"/>-->
                    <!-- TDSP -->
                    <ute:Tag class="nrgDashboard-cusDataVerify-lleft-tdspSection">
                        <utmain:Label labelFor="tdsp"
                            text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_TdspLbl}"
                            class="nrgDashboard-cusDataVerify-left-tdspLabl">
                            <utmain:tooltip>
                                <ute:Tooltip>
                                    <ute:TextView
                                        color="White"
                                        text="{oDtaVrfyContract>/TDSPSrvPhNumber}"/>
                                    <ute:TextView
                                        color="White"
                                        text="{oDtaVrfyContract>/TDSPOutPhNumber}"/>
                                </ute:Tooltip>
                            </utmain:tooltip>
                        </utmain:Label>
                        <ute:TextView id="tdsp"
                            text="{oDtaVrfyContract>/TdspName}"
                            class="nrgDashboard-cusDataVerify-left-tdspVal"/>
                    </ute:Tag>
                    <!-- Meter & Description -->
                    <ute:Tag class="nrgDashboard-cusDataVerify-left-meterDescrSection">
                        <!-- Meter -->
                        <ute:Tag class="nrgDashboard-cusDataVerify-left-meter">
                            <!-- Label Section -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-left-meterLabelSection">
                                <!-- Link to Usage Page -->
                                <utmain:Button design="None"
                                    visible="true"
                                    id="nrgDashboard-cusDataVerify-left-usageLink"
                                    class="nrgDashboard-cusDataVerify-left-usageLink">
                                    <!-- METER # -->
                                    <utmain:Label labelFor="meter_num"
                                        text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_MtrNum}"
                                        class="nrgDashboard-cusDataVerify-left-meterLabel"/>
                                </utmain:Button>
                                <utmain:Label labelFor="meter_num"
                                    visible="{
                                        parts:['oDtaVrfyContract>/SmartMeter'],
                                        formatter:'._formatRemoteLabel'}"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_NonRmtMtr}"
                                    class="nrgDashboard-cusDataVerify-left-meterRemote"/>
                            </ute:Tag>
                            <!-- Value Section -->
                            <ute:TextView id="meter_num"
                                text="{oDtaVrfyContract>/MeterNumber}"
                                class="nrgDashboard-cusDataVerify-left-meterValue"/>
                        </ute:Tag>
                        <!-- Description -->
                        <ute:Tag class="nrgDashboard-cusDataVerify-left-description">
                            <!-- Label -->
                            <utmain:Label labelFor="desp_txt"
                                text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_Desc}"
                                class="nrgDashboard-cusDataVerify-left-descrLabel"/>
                            <ute:TextView id="desp_txt"
                                text="{oDtaVrfyContract>/MeterDescription}"
                                class="nrgDashboard-cusDataVerify-left-descrVal"/>
                        </ute:Tag>
                    </ute:Tag>
                    <!-- Contract & Rate -->
                    <ute:Tag class="nrgDashboard-cusDataVerify-left-contrRateSection">
                        <!-- Contract -->
                        <ute:Tag class="nrgDashboard-cusDataVerify-left-contract">
                            <utmain:Label labelFor="contacc"
                                text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_ContAcc}"
                                class="nrgDashboard-cusDataVerify-left-contractLabel"/>
                            <ute:TextView id="contacc"
                                text="{oDtaVrfyBuags>/ContractAccountID}-{oDtaVrfyBuags>/CheckDigit}"
                                class="nrgDashboard-cusDataVerify-left-contractVal"/>
                        </ute:Tag>
                        <!-- Market Class -->
                        <ute:Tag class="nrgDashboard-cusDataVerify-left-rate">
                            <utmain:Label labelFor="rtcls_lbl"
                                text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_RtCls}"
                                class="nrgDashboard-cusDataVerify-left-rateLabel"/>
                            <ute:TextView id="rtcls_lbl"
                                text="{oDtaVrfyContract>/RateClass}"
                                class="nrgDashboard-cusDataVerify-left-rateVal"/>
                        </ute:Tag>
                    </ute:Tag>
                    <!-- ESID -->
                    <ute:Tag class="nrgDashboard-cusDataVerify-left-esidSection">
                        <utmain:Label  labelFor="esid_lbl"
                            text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_ESID}"
                            class="nrgDashboard-cusDataVerify-left-esidLabel"/>
                        <ute:TextView id="esid_lbl"
                            class="nrgDashboard-cusDataVerify-left-esidVal"
                            text="{oDtaVrfyContract>/ESID}"/>
                    </ute:Tag>
                    <!-- DL & SSN (residentail BP only) -->
                    <ute:Tag class="nrgDashboard-cusDataVerify-left-driverSocialSection" visible="{oDtaVrfyBP>/PsnBP}">
                        <ute:Tag class="nrgDashboard-cusDataVerify-left-driver">
                            <utmain:Label labelFor="dl_lbl"
                                text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_DlNum}"
                                class="nrgDashboard-cusDataVerify-left-driverLabel"/>
                            <!-- Value Section -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-left-driverValSection">
                                <ute:TextView id="dl_lbl"
                                    text="{oDtaVrfyBP>/DL}"
                                    class="nrgDashboard-cusDataVerify-left-driverVal"/>
                                <!-- Green Checkbox -->
                                <utmain:Checkbox id="idVrfyDL" enabled="false" checked="true"
                                    class="nrgDashboard-cusDataVerify-left-greenCheckbox"
                                    visible="{
                                        parts:['oDtaVrfyBP>/DLVerification'],
                                        formatter:'._formatVrfyMark'}"/>
                                <!-- Red X -->
                                <ute:TextView id="idVrfyDLNo"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_RedX}"
                                    class="nrgDashboard-cusDataVerify-left-redX"
                                    visible="{
                                        parts:['oDtaVrfyBP>/DLVerification','oDtaVrfyBP>/DL'],
                                        formatter:'._formatVrfyMarkRedX'}"/>
                            </ute:Tag>
                        </ute:Tag>
                        <ute:Tag class="nrgDashboard-cusDataVerify-left-social">
                            <utmain:Label labelFor="ssn_lbl"
                                 text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_SSNum}"
                                class="nrgDashboard-cusDataVerify-left-socialLabel"/>
                            <!-- Value Section -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-left-socialValSection">
                                <ute:TextView id="ssn_lbl"
                                    text="{oDtaVrfyBP>/SSN}"
                                    class="nrgDashboard-cusDataVerify-left-socialVal"/>
                                <!-- Green Checkbox -->
                                <utmain:Checkbox id="idVrfySSN" enabled="false" checked="true"
                                    class="nrgDashboard-cusDataVerify-left-greenCheckbox"
                                     visible="{
                                        parts:['oDtaVrfyBP>/SSNVerification'],
                                        formatter:'._formatVrfyMark'}"/>
                                <!-- Red X -->
                                <ute:TextView id="idVrfySSNNo"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_RedX}"
                                    class="nrgDashboard-cusDataVerify-left-redX"
                                    visible="{
                                        parts:['oDtaVrfyBP>/SSNVerification','oDtaVrfyBP>/SSN'],
                                        formatter:'._formatVrfyMarkRedX'}"/>
                            </ute:Tag>
                        </ute:Tag>
                    </ute:Tag>
                    <!-- DUNS# & Fed Tax ID (orgnization BP only) -->
                    <ute:Tag class="nrgDashboard-cusDataVerify-left-driverSocialSection" visible="{oDtaVrfyBP>/OrgBP}">
                        <ute:Tag class="nrgDashboard-cusDataVerify-left-driver">
                            <utmain:Label labelFor="dl_lbl"
                                text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_DUNS}"
                                class="nrgDashboard-cusDataVerify-left-driverLabel"/>
                            <!-- Value Section -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-left-driverValSection">
                                <ute:TextView
                                    text="{oDtaVrfyBP>/DUNS}"
                                    class="nrgDashboard-cusDataVerify-left-driverVal"/>
                            </ute:Tag>
                        </ute:Tag>
                        <ute:Tag class="nrgDashboard-cusDataVerify-left-social">
                            <utmain:Label labelFor="ssn_lbl"
                                 text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_TAXID}"
                                class="nrgDashboard-cusDataVerify-left-socialLabel"/>
                            <!-- Value Section -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-left-socialValSection">
                                <ute:TextView
                                    text="{oDtaVrfyBP>/TaxID}"
                                    class="nrgDashboard-cusDataVerify-left-socialVal"/>
                            </ute:Tag>
                        </ute:Tag>
                    </ute:Tag>
                </ute:Tag>
            </ute:Tag>

            <!--Area Middle (Service address/Mailing address)-->
            <ute:Tag class="nrgDashboard-cusDataVerify-middle">
                <ute:Tag class="nrgDashboard-cusDataVerify-middle-wrap">
                    <!-- 1. Toggle Tab -->
                    <ute:ToggleButton id="id_DshbTglBtn" design="ToggleDashboard"
                        leftSelected="true"
                        leftBtnText="{comp-i18n-dashboard>nrgDashboardCusDatVrf_TglBtnLTxt}"
                        rightBtnText="{comp-i18n-dashboard>nrgDashboardCusDatVrf_TglBtnRTxt}"
                        class="nrgDashboard-cusDataVerify-mTgBtn"
                        press="._onToggleButtonPress">
                    </ute:ToggleButton>
                    <!-- 2. Dropdown Menus -->
                    <ute:Tag class="nrgDashboard-cusDataVerify-middle-dropdownArea">
                        <!-- Contract Dropdown -->
                        <utmain:Dropdown id="idContractDropdown"
                            class="nrgDashboard-cusDataVerify-middle-dropdownMenu"
                            selectedKey="{oAllContractsofBuag>/selectedKey}"
                            content="{oAllContractsofBuag>/}"
                            select="._onCoSelect" >
                            <utmain:DropdownItem
                                key="{oAllContractsofBuag>iIndex}">
                                <ute:Tag elem="span"
                                    text="{oAllContractsofBuag>DisplayName}"/>
                            </utmain:DropdownItem>
                        </utmain:Dropdown>
                        <!-- Contract Account Dropdown -->
                        <utmain:Dropdown id="idCADropdown"
                            class="nrgDashboard-cusDataVerify-middle-dropdownMenu"
                            selectedKey="{oAllBuags>/selectedKey}"
                            content="{oAllBuags>/}"
                            select="._onCaSelect" >
                            <utmain:DropdownItem
                                key="{oAllBuags>iIndex}">
                                <ute:Tag elem="span"
                                    text="{oAllBuags>DisplayName}"/>
                            </utmain:DropdownItem>
                        </utmain:Dropdown>
                    </ute:Tag>

                    <!-- 3. Contact Info (Service Address) -->
                    <ute:Tag id="serviceadd_area" visible="true" class="nrgDashboard-cusDataVerify-middle-content">
                        <!-- ROW -->
                        <ute:Tag class="rgDashboard-cusDataVerify-middle-content-row serviceAddrHeight">
                            <!-- Address -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-middle-addrSection">
                                <ute:Badge id="idBadgeCI" size="30px"
                                    class="nrgDashboard-cusDataVerify-middle-addrSection-badge"
                                    visible="{
                                        parts:['oDtaVrfyContract>/JointAcc'],
                                        formatter:'._formatChecked'}"
                                    design="{comp-i18n-dashboard>nrgDashboardCusDatSum_Bg_RHSClr}"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_JABadge}">
                                </ute:Badge>
                                <ute:Tag  class="nrgDashboard-cusDataVerify-middle-addr">
                                    <ute:TextView
                                        class="nrgDashboard-cusDataVerify-mContent-add"
                                        text="{oDtaVrfyContract>/HouseNum1} {oDtaVrfyContract>/Street}"/>
                                    <ute:TextView
                                        class="nrgDashboard-cusDataVerify-mContent-add"
                                        text="{oDtaVrfyContract>/City1}, {oDtaVrfyContract>/Region} {oDtaVrfyContract>/PostCode1}"/>
                                </ute:Tag>
                            </ute:Tag>
                            <!-- Pagination for Multiple COs -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-middle-pagiSection">
                                <utmain:Button design="None"
                                    visible="{oCoPageModel>/threeLarger}"
                                    class="nrgDashboard-cusDataVerify-middle-pageBtn navigate"
                                    press="._onConFirst"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_PgFirst}">
                                </utmain:Button>
                                <utmain:Button design="None"
                                    visible="{oCoPageModel>/threeLarger}"
                                    class="nrgDashboard-cusDataVerify-middle-pageBtn navigate"
                                    press="._onConLeft"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_PgLeft}">
                                </utmain:Button>
                                <utmain:Button design="None"
                                    visible="{oCoPageModel>/paging/1/exist}"
                                    class="nrgDashboard-cusDataVerify-middle-pageBtn"
                                    press="._onConPone"
                                    text="{oCoPageModel>/paging/0/co_ind}">
                                </utmain:Button>
                                <utmain:Button design="None"
                                    visible="{oCoPageModel>/paging/1/exist}"
                                    class="nrgDashboard-cusDataVerify-middle-pageBtn"
                                    press="._onConPtwo"
                                    text="{oCoPageModel>/paging/1/co_ind}">
                                </utmain:Button>
                                <utmain:Button design="None"
                                    visible="{oCoPageModel>/paging/2/exist}"
                                    class="nrgDashboard-cusDataVerify-middle-pageBtn"
                                    press="._onConPthree"
                                    text="{oCoPageModel>/paging/2/co_ind}">
                                </utmain:Button>
                                <utmain:Button design="None"
                                    visible="{oCoPageModel>/threeLarger}"
                                    class="nrgDashboard-cusDataVerify-middle-pageBtn navigate"
                                    press="._onConRite"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_PgRite}">
                                </utmain:Button>
                                <utmain:Button design="None"
                                    visible="{oCoPageModel>/threeLarger}"
                                    class="nrgDashboard-cusDataVerify-middle-pageBtn navigate"
                                    press="._onConLast"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_PgLast}">
                                </utmain:Button>
                            </ute:Tag>
                        </ute:Tag>
                        <!-- ROW -->
                        <ute:Tag class="rgDashboard-cusDataVerify-middle-content-row">
                            <utmain:Label  labelFor="contractNum"
                                text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_CaNum}"
                                class="nrgDashboard-cusDataVerify-middel-contractNumLabel"/>
                            <ute:Textfield id="contractNum" fieldType="Underlined"
                                editable="false"
                                value="{oDtaVrfyContract>/ContractID}"
                                class="nrgDashboard-cusDataVerify-middle-contractNumVal"/>
                        </ute:Tag>
                        <!-- ROW -->
                        <ute:Tag class="rgDashboard-cusDataVerify-middle-content-row dashedBottom">
                            <!-- Cell Num -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-middel-cellNumSection">
                                <utmain:Label  labelFor="cell_num"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_CellNum}"
                                    class="nrgDashboard-cusDataVerify-middle-cellNumLabel"/>
                                <ute:Textfield id="cell_num" fieldType="Underlined"
                                    class="nrgDashboard-cusDataVerify-middle-cellNumVal"
                                    editable="{oCfrmStatus>/bEditable}"
                                    value="{oDtaVrfyBP>/Cell}"
                                    width="100px"/>
                                <!-- SMS Btn -->
                                <utmain:Button
                                    visible="{oCfrmStatus>/ShowSMSBtn}"
                                    enabled="{
                                        parts:['oDtaVrfyBP>/IsSMS'],
                                        formatter:'._formatSMSBtn'}"
                                    class="nrgDashboard-cusDataVerify-smsBtn"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_SMS}"
                                    press="._onSMSButtonClicked"/>
                            </ute:Tag>
                            <!-- Fax Num -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-middle-faxNum">
                                <utmain:Label labelFor="fax_num"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_FaxNum}"
                                    class="nrgDashboard-cusDataVerify-middle-faxNumLabel"/>
                                <ute:Textfield id="fax_num" fieldType="Underlined"
                                    value="{oDtaVrfyBP>/Fax}"
                                    editable="{oCfrmStatus>/bEditable}"
                                    class="nrgDashboard-cusDataVerify-middle-faxNumVal"
                                    width="100px"/>
                            </ute:Tag>
                        </ute:Tag>
                        <!-- ROW -->
                        <ute:Tag class="rgDashboard-cusDataVerify-middle-content-row dashedBottom">
                            <!-- Day Num -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-middle-dayNumSection">
                                <utmain:Label  labelFor="dayPhn"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_DayPhnTxt}"
                                    class="nrgDashboard-cusDataVerify-middle-dayNumLabel"/>
                                <ute:Textfield id="dayPhn" fieldType="Underlined"
                                    class="nrgDashboard-cusDataVerify-middle-dayNumVal"
                                    editable="{oCfrmStatus>/bEditable}"
                                    value="{oDtaVrfyBP>/DayPhone}"
                                    width="100px"/>
                                <!-- Extension -->
                                <utmain:Label  labelFor="dayPhnExt"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_PhnExt}"
                                    class="nrgDashboard-cusDataVerify-middle-extNumLabel"/>
                                <ute:Textfield id="dayPhnExt" fieldType="Underlined"
                                    class="nrgDashboard-cusDataVerify-middle-extNumVal"
                                    editable="{oCfrmStatus>/bEditable}"
                                    value="{oDtaVrfyBP>/DayPhoneExt}"
                                    width="30px"/>
                            </ute:Tag>
                            <!-- Num Type -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-middle-dayNumType">
                                <utmain:Label labelFor="dayPhnType"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_DayPhnTypTxt}"
                                    class="nrgDashboard-cusDataVerify-middle-dayNumTypeLabel"/>
                                <utmain:Dropdown id="dayPhnType"
                                    selectedKey="{oDtaVrfyBP>/DayPhoneType}"
                                    class="nrgDashboard-cusDataVerify-middle-dayNumTypeDropdown"
                                    content="{oDayPhoneType>/}">
                                    <utmain:DropdownItem
                                        key="{oDayPhoneType>Key}">
                                        <ute:Tag elem="span"
                                             text="{oDayPhoneType>Type}"/>
                                    </utmain:DropdownItem>
                                </utmain:Dropdown>
                            </ute:Tag>
                        </ute:Tag>
                        <!-- ROW -->
                        <ute:Tag class="rgDashboard-cusDataVerify-middle-content-row dashedBottom">
                            <!-- Evening Num -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-middle-evenNumSection">
                                <utmain:Label labelFor="evnPhn"
                                    class="nrgDashboard-cusDataVerify-middle-evenNumLabel"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_EvnPhnTxt}"/>
                                <ute:Textfield id="evnPhn" fieldType="Underlined"
                                    class="nrgDashboard-cusDataVerify-middle-evenNumVal"
                                    editable="{oCfrmStatus>/bEditable}"
                                    value="{oDtaVrfyBP>/EveningPhone}"
                                    width="100px"/>
                                <!-- Extension -->
                                <utmain:Label  labelFor="evnPhnExt"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_PhnExt}"
                                    class="nrgDashboard-cusDataVerify-middle-extNumLabel"/>
                                <ute:Textfield id="evnPhnExt" fieldType="Underlined"
                                    class="nrgDashboard-cusDataVerify-middle-extNumVal"
                                    editable="{oCfrmStatus>/bEditable}"
                                    value="{oDtaVrfyBP>/EveningPhoneExt}"
                                    width="30px"/>
                            </ute:Tag>
                            <!-- Num Type -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-middle-evenNumType">
                                <utmain:Label labelFor="evnPhnType"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_DayPhnTypTxt}"
                                    class="nrgDashboard-cusDataVerify-middle-evenNumTypeLabel"/>
                                <utmain:Dropdown id="evnPhnType"
                                    selectedKey="{oDtaVrfyBP>/EveningPhoneType}"
                                    class="nrgDashboard-cusDataVerify-middle-evenNumTypeDropdown"
                                    content="{oEvnPhoneType>/}">
                                    <utmain:DropdownItem
                                        key="{oEvnPhoneType>Key}">
                                        <ute:Tag elem="span"
                                                 text="{oEvnPhoneType>Type}"/>
                                    </utmain:DropdownItem>
                                </utmain:Dropdown>
                            </ute:Tag>
                        </ute:Tag>
                        <!-- ROW -->
                        <ute:Tag class="rgDashboard-cusDataVerify-middle-content-row noBtmMargin">
                            <utmain:Label labelFor="email_lbl"
                                text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_Email}"
                                class="nrgDashboard-cusDataVerify-middle-emailLabel"/>
                            <utmain:Button  id="email_lbl" design="None"
                                class="nrgDashboard-cusDataVerify-middle-emailVal"
                                enabled="{oCfrmStatus>/bEditable}"
                                text="{parts:['oDtaVrfyBP>/Email'],
                                       formatter:'._formatEmailAddressText'}"
                                press="._handleEmailEdit"/>
                        </ute:Tag>
                    </ute:Tag>

                    <!-- 3. Contact Info (Mail Address) -->
                    <ute:Tag id="mailadd_area" visible="false" class="nrgDashboard-cusDataVerify-middle-content">
                        <!-- ROW -->
                        <ute:Tag class="rgDashboard-cusDataVerify-middle-content-row mailingAddrHeight">
                            <ute:Tag class="nrgDashboard-cusDataVerify-middle-addrSection column">
                                <utmain:Label  labelFor="mail_FixedAddr"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_FAddr}"
                                    class="nrgDashboard-cusDataVerify-middle-mailAddrLabel"/>
                                <ute:Tag id="mail_FixedAddr" class="nrgDashboard-cusDataVerify-middle-address">
                                    <utmain:Button  design="None"
                                        class="nrgDashboard-cusDataVerify-middle-addrBtn"
                                        text="{oDtaVrfyMailingTempAddr>/FixAddrInfo/ShortForm}"
                                        press="._onEditMailAddrClick"/>
                                </ute:Tag>
                            </ute:Tag>
                            <ute:Tag class="nrgDashboard-cusDataVerify-middle-addrSection column">
                                <utmain:Label  labelFor="mail_TempAddr"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_TAddr}"
                                    class="nrgDashboard-cusDataVerify-middle-mailAddrLabel"/>
                                <ute:Tag id="mail_TempAddr" class="nrgDashboard-cusDataVerify-middle-address">
                                    <utmain:Button  design="None"
                                        enabled="{
                                            parts:['oDtaVrfyMailingTempAddr>/TempAddrNo'],
                                            formatter:'._formatNegativeX'}"
                                        class="nrgDashboard-cusDataVerify-middle-addrBtn"
                                        text="{oDtaVrfyMailingTempAddr>/TempAddrInfo/ShortForm}"
                                        press="._onEditTempAddrClick"/>
                                </ute:Tag>
                            </ute:Tag>
                        </ute:Tag>
                        <!-- ROW -->
                        <ute:Tag class="rgDashboard-cusDataVerify-middle-content-row dashedBottom">
                            <!-- Cell Num -->
                            <ute:Tag class="nrgDashboard-cusDataVerify-middel-cellNumSection">
                                <utmain:Label  labelFor="cell_num_mail"
                                    text="{comp-i18n-dashboard>nrgDashboardCusDatVrf_CellNum}"
                                    class="nrgDashboard-cusDataVerify-middle-cellNumLabel"/>
