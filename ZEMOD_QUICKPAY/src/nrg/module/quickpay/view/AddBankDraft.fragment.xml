<core:FragmentDefinition
    xmlns="http://www.w3.org/1999/xhtml"
          xmlns:c="sap.ui.commons"
          xmlns:core="sap.ui.core"
          xmlns:u="ute.ui.commons"
          xmlns:um="ute.ui.main">
    <u:Tag class="nrgQPCC-root">
        <u:Tag text="{comp-i18n-quickpay>nrgQPPaymentBD}" class="nrgQPCC-ttl"/>
        <u:Tag class="nrgQPCC-dataBD">
            <u:Tag class="nrgQPCC-row nrgQPPay-top">
                <u:Tag class="nrgQPPay-TF">
                    <u:Textfield placeholder="{comp-i18n-quickpay>nrgQPDefaultNum}"
                                 change=""
                                 fieldType="Regular"
                                 class="nrgQPCC-input"
                                 width="10rem">
                    </u:Textfield>
                </u:Tag>
                <u:Tag text="{comp-i18n-quickpay>nrgQPRouting}" class="nrgQPCC-BDlbl"/>
            </u:Tag>
            <u:Tag class="nrgQPCC-row nrgQPPay-BDtop">
                <u:Tag class="nrgQPPay-TF">
                    <u:Textfield placeholder="{comp-i18n-quickpay>nrgQPDefaultNum}"
                                 change=""
                                 fieldType="Regular"
                                 class="nrgQPCC-input"
                                 width="10rem">
                    </u:Textfield>
                </u:Tag>
                <u:Tag text="{comp-i18n-quickpay>nrgQPAccount}" class="nrgQPCC-BDlbl"/>
            </u:Tag>
        </u:Tag>
            <u:Tag class="nrgQPPay-top nrgQPPay-left" >
                <um:Button press=".onAddBD"
                           text="{comp-i18n-quickpay>nrgQPOk}"
                           class="nrgQPCC-btn"
                           design="Default">
                </um:button>
                <um:Button text="{comp-i18n-quickpay>nrgQPCancel}"
                           class="nrgQPCC-btn"
                           design="Default">
                </um:button>
            </u:Tag>
    </u:Tag>
</core:FragmentDefinition>
