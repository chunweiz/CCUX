<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:sm="sap.m"
    xmlns:um="ute.ui.main"
    xmlns:uc="ute.ui.app"
    controllerName="test.tm.ze_ccux_ctrl.view.Infoline"
    height="100%"
    width="100%"
    displayBlock="true">

    <sm:ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
        <uc:Tag content="{bp>/employees}">
            <um:Infoline>
                <um:headerContent>
                    <um:Label text="{bp>firstName}"/>
                </um:headerContent>
                <um:content>
                    <um:Label text="{bp>lastName}"/>
                </um:content>
            </um:Infoline>
        </uc:Tag>
    </sm:ScrollContainer>
</mvc:View>
