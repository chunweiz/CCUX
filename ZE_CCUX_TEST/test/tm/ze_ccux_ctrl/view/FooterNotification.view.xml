<mvc:View
    controllerName="test.tm.ze_ccux_ctrl.view.FooterNotification"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:sm="sap.m"
    xmlns:ua="ute.ui.app"
    height="100%"
    width="100%"
    displayBlock="true">

    <sm:ScrollContainer id="content" height="100%" width="100%" horizontal="true" vertical="true">
        <ua:FooterNotificationCenter content="{view-data>/notification}">
            <ua:FooterNotificationItem
                design="{view-data>design}"
                link="{view-data>link}"
                text="{view-data>text}"
                linkPress="._onLinkPress" />
        </ua:FooterNotificationCenter>
    </sm:ScrollContainer>
</mvc:View>
