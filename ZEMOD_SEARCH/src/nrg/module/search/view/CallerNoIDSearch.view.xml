<mvc:View
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ute="ute.ui.commons"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.commons.layout"
    xmlns:c="sap.ui.commons"
    xmlns:core="sap.ui.core"
    controllerName="nrg.module.search.view.CallerNoIDSearch"
    displayBlock="true">

    <ute:Tag class="nrgAppMain-generalContent nrgSearch-calrNoIDSearch">
        <ute:content>

            <ute:Tag class="nrgSearch-calrNoIDSearch-title">
                <core:Icon src="sap-icon://ute-icon/notification"
                           class="nrgSearch-calrNoIDSearch-titleIcon"/>
                <ute:Tag elem="span" class="nrgSearch-calrNoIDSearch-titleSpan"
                     text="{comp-i18n-search>nrgSearchCallerNoIDSearchTitle}">
                </ute:Tag>
            </ute:Tag>

            <ute:Tag class="nrgCallerNoIDSearch-sbtn">
                <ute:Button
                    press="onSearch"
                    text="Search"
                    enabled="true">
                </ute:Button>
            </ute:Tag>

            <!-- First Section -->
            <ute:Tag class="nrgSearch-calrNoIDSearch-textfield">
                
                <!--type:'nrg.util.type.ContractAccountNumber'-->
                <ute:Textfield
                    value="{
                        path: 'oSearchFilters>/searchTextFields/sCaNum',
                        type: 'nrg.base.type.ContractAccountNumber'
                    }"
                    id="idSearchCa"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_CaNumPh}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    label="Title"
                    fieldType="Float"
                    width="48%"
                    maxLength="12">
                </ute:Textfield>

                <!--type:'nrg.util.type.SocialSecurityNumber'-->
                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sSsn'}"
                    id="idSearchSsn"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_Ssn}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    label="Title"
                    fieldType="Float"
                    width="48%"
                    maxLength="9">
                </ute:Textfield>

                <!--type:'nrg.util.type.DriverLicenseNumber'-->
                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sDl'}"
                    id="idSearchDl"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_Dl}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    label="Title"
                    fieldType="Float"
                    width="48%">
                </ute:Textfield>

                <!--type:'nrg.util.type.BusinessPartnerNumber'-->
                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sBpNum'}"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_BpNum}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    label="Title"
                    fieldType="Float"
                    width="48%"
                    maxLength="10">
                </ute:Textfield>
            </ute:Tag>
            <!-- Second Section -->
            <ute:Tag class="nrgSearch-calrNoIDSearch-textfield">
                <!--type:'nrg.util.type.ESID'-->
                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sEsid'}"
                    id="idSearchEsid"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_Esid}"
                    change="onTextFieldChange"
                    fieldType="Float"
                    enterKeyPress="onEnterKeyPress"
                    width="48%">
                </ute:Textfield>

                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sPhnNum'}"
                    id="idSearchPhnNum"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_PhnNum}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    fieldType="Float"
                    label="Title"
                    width="48%">
                </ute:Textfield>

                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sFiName'}"
                    id="idSearchFiName"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_FiName}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    fieldType="Float"
                    width="48%">
                </ute:Textfield>

                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sLaName'}"
                    id="idSearchLaName"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_LaName}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    fieldType="Float"
                    width="48%">
                </ute:Textfield>

                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sTaxID'}"
                    id="idSearchTaxID"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_TaxID}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    fieldType="Float"
                    width="48%">
                </ute:Textfield>
            </ute:Tag>
            <!-- Third Section -->
            <ute:Tag class="nrgSearch-calrNoIDSearch-textfield">
                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sHousNum'}"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_HouseNum}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    label="Title"
                    fieldType="Float"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sStreetNum'}"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_Street}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    label="Title"
                    fieldType="Float"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sUnitNum'}"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_UnitNum}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    fieldType="Float"
                    label="Title"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sCityNum'}"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_City}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    label="Title"
                    fieldType="Float"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sStateNum'}"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_State}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    label="Title"
                    fieldType="Float"
                    width="48%">
                </ute:Textfield>
                <ute:Textfield
                    value="{
                        path:'oSearchFilters>/searchTextFields/sZipNum'}"
                    class="nrgSearch-calrNoIDSearch-textfield-input"
                    placeholder="{comp-i18n-search>nrgSearchClrNid_ZipCode}"
                    change="onTextFieldChange"
                    enterKeyPress="onEnterKeyPress"
                    label="Title"
                    fieldType="Float"
                    width="48%">
                </ute:Textfield>
            </ute:Tag>

        </ute:content>
    </ute:Tag>

    <ute:Tag class="nrgSearch-calrNoIDSearch nrgSearch-calrNoIDSearch-transSpace">
    </ute:Tag>

    <ute:Tag class="nrgAppMain-generalContent nrgSearch-calrNoIDSearch">
        <ute:Tag class="nrgSearch-calrNoIDSearch-resultTitle"
                 text="{comp-i18n-search>nrgSearchCallerNoIDSearchResultTitle}">
            <ute:Tag elem="span" class="nrgSearch-calrNoIDSearch-resultCount"
                visible="{oBpSearchCount>/searchCountBelow100}"
                text="{comp-i18n-search>nrgSearchClrNid_ResultCountStart} {oBpSearchCount>/searchCount} {comp-i18n-search>nrgSearchClrNid_ResultCountEnd}" >
            </ute:Tag>
            <ute:Tag elem="span" class="nrgSearch-calrNoIDSearch-resultCount"
                visible="{oBpSearchCount>/searchCountOver100}"
                text="{comp-i18n-search>nrgSearchClrNid_ResultCountOver100}" >
            </ute:Tag>
        </ute:Tag>

        <ute:Tag class="nrgSearch-calrNoIDSearch-resultTitle"
                 text="{oBpSearchResult>/BpSearchs('1121')/PartnerID}">
        </ute:Tag>

        <ute:Tag class="nrgSearch-calrNoIDSearch-resultTableTitle">
            <l:MatrixLayout
                width="100%"
                columns="8"
                widths="2%,18%,10%,24%,13%,13%,10%,10%">
                <l:rows>
                    <l:MatrixLayoutRow>
                        <l:MatrixLayoutCell>
                            <c:TextView text="#"></c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView
                                text="NAME">
                            </c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView text="BP #"></c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView
                                text="Street Addr">
                            </c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView text="Unit #"></c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView
                                text="City / State">
                            </c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView text="ZipCode"></c:TextView>
                        </l:MatrixLayoutCell>
                        <l:MatrixLayoutCell>
                            <c:TextView text="Select"/>
                        </l:MatrixLayoutCell>
                    </l:MatrixLayoutRow>
                </l:rows>
            </l:MatrixLayout>
        </ute:Tag>

        <ute:Tag class="nrgSearch-calrNoIDSearch-resultTable">
            <ute:ScrollContainer
                height="250px"
                width="100%"
                horizontal="false"
                vertical="true">
                <l:MatrixLayout
                    width="100%"
                    columns="8"
                    widths="2%,18%,10%,24%,13%,13%,10%,10%"
                    rows="{oBpSearchResult>/}">
                    <l:rows>
                        <l:MatrixLayoutRow>
                            <l:MatrixLayoutCell>
                                <c:TextView text="{oBpSearchResult>iId}"></c:TextView>
                            </l:MatrixLayoutCell>
                            <l:MatrixLayoutCell>
                                <c:TextView
                                    text="{oBpSearchResult>FirstName} {oBpSearchResult>LastName}">
                                </c:TextView>
                            </l:MatrixLayoutCell>
                            <l:MatrixLayoutCell>
                                <c:TextView text="{oBpSearchResult>PartnerID}"></c:TextView>
                            </l:MatrixLayoutCell>
                            <l:MatrixLayoutCell>
                                <c:TextView
                                    text="{oBpSearchResult>HouseNumber} {oBpSearchResult>Street}">
                                </c:TextView>
                            </l:MatrixLayoutCell>
                            <l:MatrixLayoutCell>
                                <c:TextView text="{oBpSearchResult>UnitNumber}"></c:TextView>
                            </l:MatrixLayoutCell>
                            <l:MatrixLayoutCell>
                                <c:TextView
                                    text="{oBpSearchResult>City} {oBpSearchResult>State}">
                                </c:TextView>
                            </l:MatrixLayoutCell>
                            <l:MatrixLayoutCell>
                                <c:TextView text="{oBpSearchResult>ZipCode}"></c:TextView>
                            </l:MatrixLayoutCell>
                            <l:MatrixLayoutCell>
                                <ute:Button
                                    press="._onBpSelect"
                                    buttonType="GeneralInfo"
                                    text="{oBpSearchResult>Select}"
                                    enabled="true">
                                </ute:Button>
                            </l:MatrixLayoutCell>
                        </l:MatrixLayoutRow>
                    </l:rows>
                </l:MatrixLayout>
            </ute:ScrollContainer>
        </ute:Tag>
    </ute:Tag>

</mvc:View>
