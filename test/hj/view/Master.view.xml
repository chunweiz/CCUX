<core:View
	controllerName="sap.ui.demo.myFiori.view.Master"
    xmlns="http://www.w3.org/1999/xhtml"
	xmlns:c="sap.ui.commons"
	xmlns:core="sap.ui.core" 
    xmlns:u="ute.ui.commons">
    <u:Tag>
        <u:Tag
            text="Buttons">
        </u:Tag>
        <u:Button
            text="TITLE"
            uteDesign="Button1"
            enabled="true"
            press="onButtonClick">
        </u:Button>
        <u:Button
            text="TITLE"
            uteDesign="Button1"
            enabled="true"
            press="onButtonClick">
        </u:Button>
        <u:Tag/>
        <u:Button
            uteDesign="Button2"
            text="TITLE"
            enabled="true"
            press="onButtonClick">
        </u:Button>
        <u:Button
            uteDesign="Button2"
            text="TITLE"
            enabled="true"
            press="onButtonClick">
        </u:Button>
        <u:Tag/>
        <u:Button
            uteDesign="Button3"
            text="TITLE"
            enabled="true"
            press="onButtonClick">
        </u:Button>
        <u:Button
            uteDesign="Button3"
            text="TITLE"
            enabled="true"
            press="onButtonClick">
        </u:Button>
    </u:Tag>

    <br/>
    <u:Tag>
        <u:Tag
            text="Badge">
        </u:Tag>
        <u:Badge
            text="RHS"
            type="Regular">
        </u:Badge>
        <u:Badge
            text="CC"
            type="Alert">
        </u:Badge>
        <u:Badge
            text="LU"
            type="Attention">
        </u:Badge>
        <u:Tag/>
        <u:CheckBox
            text="CheckBox"
            change="testCheckBox"
            name="testCheckBoxName"
            checked="false">
        </u:CheckBox>
    </u:Tag>

    <u:Tag>
        <u:Tag
            text="ToggleButton">
        </u:Tag>
        <u:ToggleButton
            leftBtnText="LEFT TITLE"
            leftBtnWidth="500px"
            rightBtnWidth="500px"
            rightBtnText="RIGHT TITLE"
            press="testFunc">
        </u:ToggleButton>
    </u:Tag>

    <br/>
    <u:Tag>
        <u:Tag
            text="Input">
        </u:Tag>
        <u:Input
            placeholder="Text"
            change="testInputChange"
            fieldType="field2"
            label="Title">
        </u:Input>
        <u:Tag/>
        <u:Input
            placeholder="Text"
            change="testInputChange"
            fieldType="field1"
            label="Title">
        </u:Input>
    </u:Tag>

    <br/>

    <u:Button
        uteDesign="Button1"
        text="to Test Page"
        enabled="true"
        press="onGoToTestPage">
    </u:Button>

    <u:RadioButton
        groupName="radio1"
        >
    </u:RadioButton>




</core:View>
